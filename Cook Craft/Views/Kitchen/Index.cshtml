@model ICollection<Recipe>

<!DOCTYPE html>
<html>
<head>
    <title>Kitchen</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
        }

        img {
            max-width: 100px;
            max-height: 100px;
        }

        .recipe-data {
            font-size: 32px; /* Adjust the font-size as needed */
        }
    </style>
</head>
<body>
    <h1>Download Logs</h1>
    <table>
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Description</th>
                <th>Author</th> 
                <th>Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var recipe in Model)
            {
                <tr>
                    <td><img src="@recipe.Image" alt="Image"/></td>
                    <td>
                        <a 
                            asp-controller="Recipe"
                            asp-action="Show" 
                            asp-route-id="@recipe.Id" 
                            class="btn btn-sm btn-outline-secondary recipe-data">
                        @recipe.Name
                        </a>
                    </td>
                    <td class="recipe-data">@recipe.Description</td>
                    @{ var totalTime = recipe.CookTime + @recipe.PrepTime; }
                    <td class="recipe-data">@recipe.AppUser?.Email</td>
                    <td class="recipe-data">@totalTime</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
